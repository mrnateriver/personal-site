---
import { normalizeCssValue } from '../styles';
export interface Props {
  class?: string;
  width?: number | string;
  height?: number | string;
  size?: number | string;
  title?: string;
}

const { class: className, title, size = 64, width, height } = Astro.props;

const normalizedWidth = normalizeCssValue(width ?? size, 'px');
const normalizedHeight = normalizeCssValue(height ?? size, 'px');
---

<span class:list={['ai-icon-container', className]} title={title}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z"></path>
    <path d="M12 5a3 3 0 1 1 5.997.125 4 4 0 0 1 2.526 5.77 4 4 0 0 1-.556 6.588A4 4 0 1 1 12 18Z"></path>
    <path d="M15 13a4.5 4.5 0 0 1-3-4 4.5 4.5 0 0 1-3 4"></path>
    <path d="M17.599 6.5a3 3 0 0 0 .399-1.375"></path>
    <path d="M6.003 5.125A3 3 0 0 0 6.401 6.5"></path>
    <path d="M3.477 10.896a4 4 0 0 1 .585-.396"></path>
    <path d="M19.938 10.5a4 4 0 0 1 .585.396"></path>
    <path d="M6 18a4 4 0 0 1-1.967-.516"></path>
    <path d="M19.967 17.484A4 4 0 0 1 18 18"></path>
  </svg>
</span>

<style lang="scss" define:vars={{ 'ai-icon-width': normalizedWidth, 'ai-icon-height': normalizedHeight }}>
  .ai-icon-container {
    --ai-icon-background: #005454;

    display: inline-block;
    background: var(--ai-icon-background);
    border-radius: var(--padding-sm);
    width: var(--ai-icon-width);
    height: var(--ai-icon-height);
    color: white;

    // This yields 12px padding for the default 64px-sized logo
    padding: calc(var(--ai-icon-height) * 0.1875) calc(var(--ai-icon-width) * 0.1875);

    svg {
      display: block;
    }
  }
</style>
