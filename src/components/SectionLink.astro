---
import { normalizeAndStringifyColor, type Color } from '../colors';
export interface Props {
  class?: string;
  href: string;
  borderWidthPx?: number;
  borderSizePx?: number;
  borderOffsetPx?: number;
  borderColor?: Color;
}

const {
  class: className,
  href,
  borderWidthPx = 2,
  borderSizePx = 32,
  borderOffsetPx = borderSizePx / 2,
  borderColor = 'cyan',
} = Astro.props;
---

<a class={className} href={href}>
  <slot />
</a>

<style
  lang="scss"
  define:vars={{
    'border-width-px': `${borderWidthPx}px`,
    'border-size-px': `${borderSizePx}px`,
    'border-offset-px': `${borderOffsetPx}px`,
    'border-color': normalizeAndStringifyColor(borderColor),
  }}
>
  @keyframes selection-grow {
    0% {
      border-width: var(--border-width-px);
      height: 0;
      width: 0;
    }
    50% {
      border-width: var(--border-width-px);
      width: var(--border-size-px);
      height: 0;
    }
    100% {
      border-width: var(--border-width-px);
      width: var(--border-size-px);
      height: var(--border-size-px);
    }
  }

  a {
    transform-style: preserve-3d;
    display: inline-block;
    position: relative;

    &::before,
    &::after {
      content: '';
      display: block;
      position: absolute;
      transition: all 300ms ease-in-out;
      height: 0;
      width: 0;
    }

    &::before {
      bottom: calc(-1 * var(--border-offset-px));
      left: calc(-1 * var(--border-offset-px));
    }
    &::after {
      right: calc(-1 * var(--border-offset-px));
      top: calc(-1 * var(--border-offset-px));
    }

    &:hover {
      &::before {
        border-left-style: solid;
        border-bottom-style: solid;
        border-left-color: var(--border-color);
        border-bottom-color: var(--border-color);
      }
      &::after {
        border-right-style: solid;
        border-top-style: solid;
        border-right-color: var(--border-color);
        border-top-color: var(--border-color);
      }

      &::before,
      &::after {
        animation: selection-grow 200ms forwards ease-in-out;
      }
    }
  }
</style>
